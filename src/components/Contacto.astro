<section id="contact" class="container mx-auto px-4 py-16 lg:py-24">
  <div class="text-center mb-12">
    <h2
      class="text-3xl lg:text-4xl font-extrabold text-center mb-6 text-[#e1359d] animated"
    >
      Â¡Conversemos sobre tu proyecto!
    </h2>
    <p class="text-center text-gray-300 mb-1.5">
      Envianos tu consulta y te responderemos en breve.
    </p>
  </div>
  <div
    class="max-w-xl mx-auto p-8 rounded-2xl bg-[#2a224a] shadow-lg animated animate-delay-1"
  >
    <form action="#" method="POST" class="space-y-6">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-400"
          >Nombre y Apellido</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          placeholder="Nombre y Apellido"
          class="mt-1 block w-full px-4 py-3 bg-[#1e173f] border border-[#5e17ea] rounded-full text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#5e17ea]"
        />
      </div>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-400"
          >Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="Email"
          class="mt-1 block w-full px-4 py-3 bg-[#1e173f] border border-[#5e17ea] rounded-full text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#5e17ea]"
        />
      </div>
      <div>
        <label for="telefono" class="block text-sm font-medium text-gray-400">
          Celular
        </label>
        <input
          type="text"
          id="celular"
          name="celular"
          required
          placeholder="Numero de celular"
          class="mt-1 block w-full px-4 py-3 bg-[#1e173f] border border-[#5e17ea] rounded-full text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#5e17ea]"
        />
      </div>
      <div>
        <label for="message" class="block text-sm font-medium text-gray-400"
          >Mensaje</label
        >
        <textarea
          id="message"
          name="message"
          rows="4"
          required
          placeholder="Escribe tu mensaje"
          class="mt-1 block w-full px-4 py-3 bg-[#1e173f] border border-[#5e17ea] rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#5e17ea]"
        ></textarea>
      </div>
      <div class="text-center">
        <button
          type="submit"
          class="w-1/2 px-8 py-3 btn-primary rounded-full text-lg font-bold opacity-80 hover:opacity-100 hover:cursor-pointer"
        >
          Enviar Consulta
        </button>
      </div>
    </form>
  </div>
</section>
