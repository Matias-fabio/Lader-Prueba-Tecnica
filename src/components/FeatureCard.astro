---
interface Props {
  title: string;
  content: string;
  excerpt: string;
  slug: string;
  featuredImage: string;
}

const { title, content, excerpt, slug, featuredImage } = Astro.props;
---

<div
  class="bg-gray-100 rounded-2xl p-8 shadow-sm transition-transform duration-300 hover:scale-[1.02] flex flex-col items-start text-left"
>
  <div class="mb-4">
    <img
      src={featuredImage}
      alt={title}
      class="w-14 h-14 rounded-full object-cover bg-[#b7f200] p-2"
    />
  </div>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600" set:html={excerpt} />
</div>
