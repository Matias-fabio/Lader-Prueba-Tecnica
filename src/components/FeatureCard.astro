---
interface Props {
  title: string;
  content: string;
  excerpt: string;
  icon: string;
  slug: string;
}

const { title, content, excerpt, icon, slug } = Astro.props;
---

<div
  class="bg-gray-100 rounded-2xl p-8 shadow-sm transition-transform duration-300 hover:scale-[1.02] flex flex-col items-start text-left"
>
  <div class="flex-shrink-0 mb-4" set:html={icon} />
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600" set:html={content}>
    {excerpt}
  </p>
</div>
